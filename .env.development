# ===== CCPM Development Environment =====

# ===== Application =====
NODE_ENV=development
APP_NAME=CCPM-Dev
APP_VERSION=1.0.0-dev

# ===== Server Configuration =====
BACKEND_PORT=3001
FRONTEND_PORT=3000

# ===== Database Configuration =====
POSTGRES_HOST=localhost
POSTGRES_PORT=5433
POSTGRES_DB=ccpm_dev
POSTGRES_USER=ccpm_dev_user
POSTGRES_PASSWORD=ccpm_dev_password

DATABASE_URL=postgresql://ccpm_dev_user:ccpm_dev_password@localhost:5433/ccpm_dev

# ===== Redis Configuration =====
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6380

# ===== JWT Configuration =====
JWT_SECRET=dev-jwt-secret-key-not-for-production
JWT_REFRESH_SECRET=dev-refresh-secret-key-not-for-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=30d

# ===== Encryption =====
ENCRYPTION_KEY=dev-encryption-key-32-bytes-long
ENCRYPTION_ALGORITHM=aes-256-gcm

# ===== CORS Configuration =====
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# ===== Logging =====
LOG_LEVEL=debug
LOG_DIR=./logs
LOG_MAX_FILES=3
LOG_MAX_SIZE=5m

# ===== Development =====
ENABLE_SWAGGER=true
ENABLE_CORS=true
ENABLE_DEVTOOLS=true
HOT_RELOAD=true

# ===== Development Tools =====
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081

# ===== Security (Relaxed for Development) =====
BCRYPT_ROUNDS=4
SESSION_SECRET=dev-session-secret

# ===== API Configuration =====
API_PREFIX=/api/v1
API_RATE_LIMIT=10000
API_RATE_WINDOW=1

# ===== Monitoring =====
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health