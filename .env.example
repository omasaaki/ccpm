# ===== CCPM Environment Configuration =====

# ===== Application =====
NODE_ENV=development
APP_NAME=CCPM
APP_VERSION=1.0.0

# ===== Server Configuration =====
BACKEND_PORT=3001
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443

# ===== Database Configuration =====
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=ccpm
POSTGRES_USER=ccpm_user
POSTGRES_PASSWORD=ccpm_password

# Full database URL
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===== Redis Configuration =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}

# ===== JWT Configuration =====
JWT_SECRET=your-super-secret-jwt-key-here-change-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ===== Encryption =====
ENCRYPTION_KEY=your-32-byte-encryption-key-here-1234
ENCRYPTION_ALGORITHM=aes-256-gcm

# ===== CORS Configuration =====
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:3001

# ===== Logging =====
LOG_LEVEL=info
LOG_DIR=./logs
LOG_MAX_FILES=5
LOG_MAX_SIZE=10m

# ===== Email Configuration =====
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=noreply@example.com
SMTP_PASS=smtp-password
EMAIL_FROM=CCPM System <noreply@example.com>

# ===== File Upload =====
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# ===== API Configuration =====
API_PREFIX=/api/v1
API_RATE_LIMIT=1000
API_RATE_WINDOW=15

# ===== Security =====
BCRYPT_ROUNDS=12
SESSION_SECRET=your-session-secret-change-in-production
ENABLE_SWAGGER=true
ENABLE_CORS=true

# ===== Development Tools =====
ADMINER_PORT=8080
REDIS_COMMANDER_PORT=8081

# ===== Monitoring =====
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PATH=/health

# ===== External Services =====
# MFA Provider (future)
MFA_PROVIDER=
MFA_API_KEY=

# Notification Services
SLACK_WEBHOOK_URL=
TEAMS_WEBHOOK_URL=

# ===== CI/CD Configuration =====
CI=false
GITHUB_ACTIONS=false
NODE_ENV_CI=test

# Docker Registry Configuration  
DOCKER_REGISTRY_URL=docker.io
DOCKER_REGISTRY_USER=your-docker-username
DOCKER_REGISTRY_TOKEN=your-docker-access-token

# Deployment Configuration
DEPLOYMENT_ENVIRONMENT=development
STAGING_URL=https://staging.ccpm.example.com
PRODUCTION_URL=https://ccpm.example.com

# Test Database (CI only)
TEST_DATABASE_URL=postgresql://test_user:test_password@localhost:5432/ccpm_test
TEST_REDIS_URL=redis://localhost:6379

# Code Quality Thresholds
COVERAGE_THRESHOLD=80
LINT_MAX_WARNINGS=0

# Security Scanning
ENABLE_SECURITY_SCAN=true
SECURITY_SCAN_FAIL_ON_HIGH=true

# ===== Monitoring & Observability =====
SENTRY_DSN=your-sentry-dsn-here
APM_SERVICE_NAME=ccpm
ENABLE_TRACING=false

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=false
PERFORMANCE_SAMPLE_RATE=0.1

# ===== Feature Flags =====
ENABLE_NEW_FEATURE_X=false
MAINTENANCE_MODE=false
ENABLE_DEBUG_MODE=false

# ===== Production Overrides =====
# These should be overridden in production
POSTGRES_PASSWORD_PROD=
REDIS_PASSWORD_PROD=
JWT_SECRET_PROD=
JWT_REFRESH_SECRET_PROD=
ENCRYPTION_KEY_PROD=

# Production Database (separate from development)
DATABASE_URL_PROD=
REDIS_URL_PROD=

# Production Docker Registry
DOCKER_REGISTRY_URL_PROD=
DOCKER_REGISTRY_USER_PROD=
DOCKER_REGISTRY_TOKEN_PROD=